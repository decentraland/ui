{
  "name": "decentraland-ui",
  "version": "0.0.0-development",
  "description": "Decentraland's UI components and styles",
  "main": "lib/index.js",
  "typings": "lib/src/index.d.ts",
  "scripts": {
    "start": "start-storybook -p 6006",
    "test:coverage": "jest test/coverage/coverage.test.ts --coverage",
    "test:visual": "npm run build:storybook && jest test/visual/visual.test.ts",
    "test:visual:without-build": "jest test/visual/visual.test.ts",
    "test": "npm run test:coverage && npm run test:visual",
    "codecov": "codecov",
    "build": "rimraf lib && webpack --config webpack.config.js",
    "build:storybook": "build-storybook && cp ./static/* ./storybook-static && cp now.json ./storybook-static && node postbuild",
    "semantic-release": "semantic-release",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/ui.git"
  },
  "keywords": [
    "decentraland",
    "ui",
    "react",
    "semantic-ui",
    "components",
    "styles",
    "themes"
  ],
  "author": "Decentraland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/decentraland/ui/issues"
  },
  "homepage": "https://github.com/decentraland/ui#readme",
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.0-alpha.23",
    "@storybook/addon-centered": "^4.0.0-alpha.23",
    "@storybook/addon-links": "^4.0.0-alpha.23",
    "@storybook/addon-options": "^4.0.0-alpha.23",
    "@storybook/addon-storyshots": "^4.0.0-alpha.23",
    "@storybook/addon-storyshots-puppeteer": "^4.0.0-alpha.23",
    "@storybook/addon-storysource": "^4.0.0-alpha.23",
    "@storybook/addons": "^4.0.0-alpha.23",
    "@storybook/react": "^4.0.0-alpha.23",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "@types/react": "^16.4.1",
    "@types/react-test-renderer": "^16.0.1",
    "@types/storybook__react": "^3.0.7",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "codecov": "^3.0.2",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jest": "^24.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "now": "^11.2.4",
    "postcss-color-mod-function": "^2.4.2",
    "postcss-loader": "^2.1.5",
    "postcss-preset-env": "^5.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.6.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "balloon-css": "^0.5.0",
    "ethereum-blockies": "^0.1.1",
    "parallax-js": "^3.1.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0"
  },
  "peerDependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "@types/react": "^16.4.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/__config__/setup.js"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.(ts|tsx|js)"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
